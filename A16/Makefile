#==============================================================================
#                                   Makefile
#==============================================================================
# make all, clean, tar, runA16
#==============================================================================
DIR = $(notdir $(CURDIR))
LIB_DIR = ./lib
#--------------------------------------------------------
NAME1 = zadA16

#--------------------------------------------------------
EXEC1 = $(NAME1).x
OBJS1 = $(NAME1).o

#--------------------------------------------------------
CFLAGS = -Wall -std=c99 -pedantic -O -lpthread
LFLAGS = -Wall -std=c99 -pedantic -O -lpthread

CO = gcc
LD = $(CO)

AR = ar
ARFLAGS = rsv
#--------------------------------------------------------
%.o: %.c %.h
	$(CO) $(CFLAGS) -c $<
#--------------------------------------------------------
.PHONY: all
all: $(EXEC1)
#--------------------------------------------------------
$(EXEC1): $(OBJS1)
	$(LD) -o $@ $(LFLAGS) $^

#--------------------------------------------------------
runA16: $(EXEC1)
	./$(EXEC1)

#--------------------------------------------------------
.PHONY: clean tar
# Sprzatanie
clean:                                                     
	rm -f *.o  *~ *.a *.so *.x core core* a.out *.txt towarfifo; rm -rf ${LIB_DIR}
# Archiwizacja i kompresja
tar: clean
	(cd ../; tar -cvzf $(DIR).tar.gz  $(DIR) )
